include $(RTE_SDK)/mk/rte.vars.mk

phpspy_cppflags:=-std=c++2a -Wall -Wextra -pedantic -g -O3 $(CFLAGS) $(CPPFLAGS)

include ./Makefile

phpspy_tests: phpspy_static
	$(CC) $(phpspy_cppflags) $(phpspy_includes) $(termbox_includes) $(phpspy_defines) $(phpspy_ldflags) $(termbox_libs) -lstdc++ -I/usr/include/dpdk/ -I /usr/src/gtest -L /usr/local/lib -ldpdk  -lgtest $(phpspy_libs) ./tests/pyroscope_api/*.cpp ./gtest_main.cpp libphpspy.a -o pyroscope_api_tests

include $(RTE_SDK)/mk/rte.app.mk
